<table class="table table-striped table-bordered" style="width:100%">
	<thead>
		<tr>
			<th>#</th>
			<th>User</th>
			<th>Company</th>
			<th>Channel</th>
			<th>Type</th>
			<th>Module</th>
			<th>Date</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for ticket in tickets %}
			<tr>
				<td>{{ ticket.id }}</td>
				<td>{{ ticket.user }}</td>
				<td>{{ ticket.company }}</td>
				<td>{{ ticket.channel }}</td>
				<td>{{ ticket.type }}</td>
				<td>{{ ticket.module }}</td>
				<td>{{ ticket.created_at }}</td>
				<td>
					<form action="{{ path_for('tickets.delete', { id: ticket.id }) }}" method="get">
						<div class='btn-group'>
							<a href="{{ path_for('tickets.show', { id: ticket.id }) }}" class='btn btn-primary'>
								<i class="glyphicon glyphicon-eye-open"></i>
							</a>
							<a href="{{ path_for('tickets.edit', { id: ticket.id }) }}" class='btn btn-primary'>
								<i class="glyphicon glyphicon-edit"></i>
							</a>
							<button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja deletar?')">
								<i class="glyphicon glyphicon-trash"></i>
							</button>
						</div>
					</form>
				</td>
			</tr>
		{% endfor %}
	</tbody>
	<tfoot>
		<tr>
			<th>#</th>
			<th>User</th>
			<th>Company</th>
			<th>Channel</th>
			<th>Type</th>
			<th>Module</th>
			<th>Date</th>
			<th>Actions</th>
		</tr>
	</tfoot>
</table>