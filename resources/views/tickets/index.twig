{% extends 'templates/app.twig' %}

{% block content %}
	<div class="content">
		<h3 class="pull-left">Tickets</h3>
		<a class="btn btn-primary pull-right" href="{{ path_for('tickets.getCreationForm') }}">Create new</a>
		<div class="clearfix"></div>

	    <table class="table table-striped table-bordered" style="width:100%">
			<thead>
				<tr>
					<th>#</th>
					<th>User</th>
					<th>Company</th>
					<th>Channel</th>
					<th>Type</th>
					<th>Module</th>
					<th>Date</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for ticket in tickets %}
					<tr>
						<td>{{ ticket.id }}</td>
						<td>{{ ticket.user }}</td>
						<td>{{ ticket.company }}</td>
						<td>{{ ticket.channel }}</td>
						<td>{{ ticket.type }}</td>
						<td>{{ ticket.module }}</td>
						<td>{{ ticket.created_at }}</td>
						<td>TODO</td>
					</tr>
    			{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<th>#</th>
					<th>User</th>
					<th>Company</th>
					<th>Channel</th>
					<th>Type</th>
					<th>Module</th>
					<th>Date</th>
					<th>Actions</th>
				</tr>
			</tfoot>
		</table>
	</div>
{% endblock %}